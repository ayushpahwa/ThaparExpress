<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thereaper.thaparexpress" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".option.Event"
            android:label="Events" >
        </activity>
        <activity
            android:name=".option.Societies"
            android:label="Societies" >
        </activity>
        <activity
            android:name=".option.ThaparLogs"
            android:label="Thapar Logs" >
        </activity>
        <activity
            android:name=".option.TimeTable"
            android:label="Time Table" >
        </activity>
        <activity
            android:name=".option.Contribute"
            android:label="Contribute" >
        </activity>
        <activity
            android:name=".Splash"
            android:label="ThaparExpress" >
            <intent-filter>
                <action android:name="android.intent.action.SPLASH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OneTime"
            android:label="ThaparExpress" >
            <intent-filter>
                <action android:name="android.intent.action.ONETIME" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.Details"
            android:label="@string/title_activity_details"
            android:theme="@style/MenuTheme" >
        </activity>
        <activity
            android:name=".menu.FeedBack"
            android:label="@string/title_activity_feed_back"
            android:theme="@style/MenuTheme">
        </activity>
        <activity
            android:name=".menu.Bug"
            android:label="@string/title_activity_bug"
            android:theme="@style/MenuTheme" >
        </activity>
    </application>

</manifest>
